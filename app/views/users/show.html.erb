<article class="type-system-rounded">
  <p class="type"><%= @user.class %></p>
  <header>
    <h1>Your Account</h1>
    <p>Name: <%= @user.full_name %></p>
    <p>Email: <%= @user.email %></p>

    <p><%= link_to "Edit Account", edit_user_path(@user) %> |
    <%= link_to "Delete Account", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account?"} %></p>
  </header>
</article>
